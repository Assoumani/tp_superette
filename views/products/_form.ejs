<form class="card-body" method="post" action="<%= action %>">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="name" name="name"
               placeholder="Nom du produit" <% if (product) {%> value="<%= product.name%>" <% } %>>
        <label for="name">Nom du produit</label>
    </div>

    <div class="form-floating mb-3">
        <textarea class="form-control" id="description" name="description" placeholder="Description du produit">
            <% if (product) {%> <%= product.description %> <% } %>
        </textarea>
        <label for="name">Description du produit</label>
    </div>

    <div class="row">

        <div class="col">

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="price" name="price"
                       placeholder="Prix du produit" <% if (product) {%> value="<%= product.price%>" <% } %>>
                <label for="dateBegin">Prix du produit</label>
            </div>

        </div>

        <div class="col">

            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="quantity" name="quantity"
                       placeholder="Quantité du produit" <% if (product) {%> value="<%= product.quantity%>" <% } %>>
                <label for="dateBegin">Quantité du produit</label>
            </div>

        </div>

    </div>

<!--    <div class="form-floating mb-3">-->
<!--        <input type="file" class="form-control" id="imgUrl" name="imgUrl" placeholder="Lien de l'image">-->
<!--        <label for="imgUrl">Image du produit</label>-->
<!--    </div>-->

    <div class="row col-6 mx-auto">
        <button type="submit" class="btn btn-dark btn-lg btn-block"><%= submitLabel %></button>
        <a href="/products" class="btn btn-outline-dark my-2">RETOUR</a>
    </div>

</form>
